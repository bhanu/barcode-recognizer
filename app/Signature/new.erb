<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @signature.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @signature.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="signature[foo]" class="fieldLabel">Foo</label>
            <input type="text" id="signature[foo]" name="signature[foo]" <%= placeholder("Foo") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
