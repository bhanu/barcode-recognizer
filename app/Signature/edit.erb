<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @signature.foo %></h1>
    <a href="<%= url_for :action => :show, :id => @signature.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @signature.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @signature.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="signature[foo]" class="fieldLabel">Foo</label>
            <input type="text" id="signature[foo]" name="signature[foo]" value="<%= @signature.foo %>" <%= placeholder( "Foo" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
