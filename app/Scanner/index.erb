<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Scanners</h1>
    <a href="<%= Rho::RhoConfig.start_path %>" class="ui-btn-left" data-icon="home" data-direction="reverse">Home</a>
    <a href="<%= url_for :action => :new %>" class="ui-btn-right" data-icon="plus">New</a>
  </div>

  <div data-role="content">
    <ul data-role="listview">

      <% if System::get_property('has_camera') %>
        <li>
          <a href="<%= url_for :action => :new %>">
            <span class="title">Scan Barcode</span>
            <span class="disclosure_indicator"></span>
          </a>
        </li>
      <% end %>
    </ul>
  </div>

</div>
